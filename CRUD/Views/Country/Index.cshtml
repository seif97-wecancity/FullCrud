@model IEnumerable<Country>;

@{
    ViewData["Title"] = "Index";
}


<div class="container mt-5">
    <div class="row">
         <div class="col-8">
             <h1>Countries</h1>
         </div>
         <div class="col-4 text-end">
            
                 <a asp-Controller="Country" asp-action="Create"> 
                     <button class="btn btn-danger">
                         Create Country
                         </button>
                 </a>
             
         </div>
         <div class="col-12">
             
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">CountryCode</th>
      <th scope=col>Delete</th>
      <th scope="col">Update</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
      {
        <tr>
      <th scope="row">@item.Id</th>
      <td>@item.Name</td>
      <td>@item.CountryCode</td>
      <td><a asp-controller="Country" asp-action="Delete" asp-route-id="@item.Id">
          Delete
      </a></td>
      <td><a asp-controller="Country" asp-action="Edit" asp-route-id="@item.Id">Update</a></td>
    </tr>
      }
    
   
   
  </tbody>
</table>
         </div>
    </div>
</div>