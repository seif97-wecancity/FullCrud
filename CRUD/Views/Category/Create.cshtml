@model Category;


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-danger">Create Category</h2>
            <hr>
            <div class="mb-3 col-6">
                <lable asp-for="Name">Name</lable>
                <input class="form-control" asp-for="Name"/>
            </div>
             <div class="mb-3 col-6">
                <lable asp-for="Grade">Grade</lable>
                <input class="form-control" asp-for="Grade"/>
            </div>
            <div class="text-end">
            <button type="submit" class="btn btn-danger text-end col-1">Submit</button>
            </div>
        </div>
    </div>
</form>