@model IEnumerable<CRUD.Models.Category>;

@{
    ViewData["Title"] = "Index";
}


<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
             Category
        </div>
        <div class="col-lg-4 text-end">
            <a asp-controller="Category" asp-action="Create">
                <button class="btn btn-danger">Create Category</button>
            </a>
        </div>
    </div>
    <div class="col-lg-12">
        <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Grade</th>
      <th scope="col">Delete</th>
      <th scope="col">Update</th>

    </tr>
  </thead>
  <tbody>
       @foreach (var item in Model)
        {
    <tr>
      <th scope="row">@item.Id</th>
      <td>@item.Name</td>
      <td>@item.Grade</td>
      <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
      <td><a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Update</a></td>
    </tr>
   }
  </tbody>
</table>
    </div>
</div>